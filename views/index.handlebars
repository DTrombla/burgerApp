
<h1>Eat-Da-Burger!</h1>
<div class="container row">
    <div class="burgerControl one col-md-5">
        <h2>Burgers not ate</h2>

        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devour=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="burgerControl col-md-5">
        <h2>Burgers that been ate</h2>

        <ul>
          {{#each burgers}}
            {{#if devoured}}
            <li>
              {{name}}
              </li>
            {{/if}}

          {{/each}}
        </ul>
    </div>
</div>

<div class="burgerAdd">
    <h2>Add a Burger to Your List</h2>
    <form class="create-form">
    
        <div class="form-group burgerName">
            <label for="ca">Burger Name</label>
            <input class = "inputBox" type="text" id="ca" name="name">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Add Burger</button>
     </form>
 </div>
   